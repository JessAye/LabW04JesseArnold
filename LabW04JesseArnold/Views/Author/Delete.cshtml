@model LabW04JesseArnold.Models.ViewModels.DeleteAuthorVM
@{
    ViewData["Title"] = "Deleting author" + Model.FirstName + Model.LastName + "from" + Model.Book.Title + "'";
}

<h1>Deleting author @Model.FirstName @Model.LastName from @Model.Book.Title</h1>

<h3>You are about to delete @Model.FirstName @Model.LastName, are you sure?</h3>
<div>
    <form asp-action="Delete">
        <input type="hidden" name="authorId" value="@Model.Id" />
        <input type="hidden" name="bookId" value="@Model.Book.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Details" asp-controller="Book" asp-route-id="@Model.Book.Id">
            Back to Book Details
        </a>
    </form>
</div>